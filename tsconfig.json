{
  "compilerOptions": {
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "strictPropertyInitialization": false,
    "lib": ["es2017", "dom"],
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}