{
  "compilerOptions": {
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "strictPropertyInitialization": false,
    "lib": ["es2017", "dom"],
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}